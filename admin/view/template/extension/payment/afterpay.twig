{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a onclick="$('#form-afterpay').attr('action', '{{ continue }}');$('#form-afterpay').submit();" data-toggle="tooltip" title="{{ button_continue }}" class="btn btn-primary"><i class="fa fa-save"></i></a>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if error_config %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_config }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if error_order_statuses %}
    <div class="alert alert-info"><i class="fa fa-exclamation-circle"></i> {{ error_order_statuses }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-afterpay" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li{{ currency_code == 'EUR' ? ' class="hide"' : '' }}><a href="#tab-express-checkout" data-toggle="tab">{{ tab_express_checkout }}</a></li>
            <li><a href="#tab-order-status" data-toggle="tab">{{ tab_order_status }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-test">{{ entry_test }}</label>
                <div class="col-sm-10">
                  <select name="payment_afterpay_test" id="input-test" class="form-control">
                    {% if payment_afterpay_test %}
                    <option value="1" selected="selected">{{ text_yes }}</option>
                    <option value="0">{{ text_no }}</option>
                    {% else %}
                    <option value="1">{{ text_yes }}</option>
                    <option value="0" selected="selected">{{ text_no }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-merchant-id">{{ entry_merchant_id }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_afterpay_merchant_id" value="{{ payment_afterpay_merchant_id }}" placeholder="{{ entry_merchant_id }}" id="entry-merchant-id" class="form-control" />
                  {% if error_merchant_id %}
                  <div class="text-danger">{{ error_merchant_id }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-secret-key">{{ entry_secret_key }}</label>
                <div class="col-sm-10">
                  <input type="password" name="payment_afterpay_secret_key" value="{{ payment_afterpay_secret_key }}" placeholder="{{ entry_secret_key }}" id="entry-secret-key" class="form-control" />
                  {% if error_secret_key %}
                  <div class="text-danger">{{ error_secret_key }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-minimum-amount">{{ entry_minimum_amount }}</label>
                <div class="col-sm-10">
                  <input type="text" value="{{ payment_afterpay_minimum_amount }}" id="entry-minimum-amount" class="form-control" disabled="disabled"/>
                  <p>{{ text_threshold }}</p>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-maximum-amount">{{ entry_maximum_amount }}</label>
                <div class="col-sm-10">
                  <input type="text" value="{{ payment_afterpay_maximum_amount }}" id="entry-maximum-amount" class="form-control" disabled="disabled"/>
                  <p>{{ text_threshold }}</p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                <div class="col-sm-10">
                  <select name="payment_afterpay_geo_zone_id" id="input-geo-zone" class="form-control">
                    <option value="0">{{ text_all_zones }}</option>
                    {% for geo_zone in geo_zones %}
                    {% if geo_zone.geo_zone_id == payment_afterpay_geo_zone_id %}
                    <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                    {% else %}
                    <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-badge-theme">{{ entry_badge_theme }}</label>
                <div class="col-sm-10">
                  <select name="payment_afterpay_badge_theme" id="input-badge-theme" class="form-control">
                    <option value="black-on-mint"{{ payment_afterpay_badge_theme == 'black-on-mint' ? ' selected="selected"' : '' }}>{{ text_black_on_mint }}</option>
                    <option value="mint-on-black"{{ payment_afterpay_badge_theme == 'mint-on-black' ? ' selected="selected"' : '' }}>{{ text_mint_on_black }}</option>
                    <option value="white-on-black"{{ payment_afterpay_badge_theme == 'white-on-black' ? ' selected="selected"' : '' }}>{{ text_white_on_black }}</option>
                    <option value="black-on-white"{{ payment_afterpay_badge_theme == 'black-on-white' ? ' selected="selected"' : '' }}>{{ text_black_on_white }}</option> 
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-product-listing">{{ entry_product_listing }}</label>
                <div class="col-sm-10">
                  <select name="payment_afterpay_product_listing" id="input-product-listing" class="form-control">
                    {% if payment_afterpay_product_listing %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-category"><span data-toggle="tooltip" title="{{ help_categories }}">{{ entry_categories }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="category" value="" placeholder="{{ entry_categories }}" id="input-category" class="form-control" />
                  <div id="product-category" class="well well-sm" style="height: 150px; overflow: auto;">
                    {% for product_category in product_categories %}
                    <div id="product-category{{ product_category.category_id }}"><i class="fa fa-minus-circle"></i> {{ product_category.name }}
                      <input type="hidden" name="payment_afterpay_categories[]" value="{{ product_category.category_id }}" />
                    </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_afterpay_status" id="input-status" class="form-control">
                    {% if payment_afterpay_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_afterpay_sort_order" value="{{ payment_afterpay_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-express-checkout">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-express-checkout-status">{{ entry_express_checkout_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_afterpay_express_checkout_status" id="input-express-checkout-status" class="form-control">
                    {% if payment_afterpay_express_checkout_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-order-status">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-approved-status">{{ entry_approved_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_afterpay_approved_status_id" id="input-approved-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_afterpay_approved_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-declined-status">{{ entry_declined_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_afterpay_declined_status_id" id="input-declined-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_afterpay_declined_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-refunded-status">{{ entry_refunded_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_afterpay_refunded_status_id" id="input-refunded-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_afterpay_refunded_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
// Category
$('input[name=\'category\']').autocomplete({
    'source': function(request, response) {
        $.ajax({
            url: 'index.php?route=catalog/category/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
            dataType: 'json',
            success: function(json) {
                response($.map(json, function(item) {
                    return {
                        label: item['name'],
                        value: item['category_id']
                    }
                }));
            }
        });
    },
    'select': function(item) {
        $('input[name=\'category\']').val('');

        $('#product-category' + item['value']).remove();

        $('#product-category').append('<div id="product-category' + item['value'] + '"><i class="fa fa-minus-circle"></i> ' + item['label'] + '<input type="hidden" name="payment_afterpay_categories[]" value="' + item['value'] + '" /></div>');
    }
});

$('#product-category').delegate('.fa-minus-circle', 'click', function() {
    $(this).parent().remove();
});
//--></script>
{{ footer }}