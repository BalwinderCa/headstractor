<h2>{{ text_payment_info }}</h2>
<table class="table table-striped table-bordered">
  <tr>
    <td>{{ text_order_ref }}</td>
    <td>{{ afterpay_order['order_id'] }}</td>
  </tr>
  <tr>
    <td>{{ text_afterpay_order_id }}</td>
    <td>{{ afterpay_order['afterpay_reference_id'] }}</td>
  </tr>
  <tr>
    <td>{{ text_order_total }}</td>
    <td>{{ afterpay_order['total'] }}</td>
  </tr>
  <tr>
    <td>{{ text_refund_status }}</td>
    <td>
      <input type="text" id="refund-amount" name="refund_amount" placeholder="{{ text_refund_amount }}" class="form-control" />
      <br /><br />
      <button type="button" class="button btn btn-primary" id="button-refund">{{ button_refund }}</button> 
    </td>
  </tr>
  <tr>
    <td>{{ text_transactions }}:</td>
    <td><table class="table table-striped table-bordered" id="afterpay-transactions">
        <thead>
          <tr>
            <td class="text-left"><strong>{{ text_column_date_added }}</strong></td>
            <td class="text-left"><strong>{{ text_column_type }}</strong></td>
            <td class="text-left"><strong>{{ text_column_amount }}</strong></td>
          </tr>
        </thead>
        <tbody>
          {% for transaction in afterpay_order.transactions %}
          <tr>
            <td class="text-left">{{ transaction.date_added }}</td>
            <td class="text-left">{{ transaction.type }}</td>
            <td class="text-left">{{ transaction.amount }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table></td>
  </tr>
</table>
<script type="text/javascript"><!--
$("#button-refund").on('click', function () {
    if (confirm("{{ text_confirm_refund }}")) {
        if (!$('#refund-amount').val()) {
            alert('Please enter a valid refund amount!');
        } else {
            $.ajax({
                url: 'index.php?route=extension/payment/afterpay/refund&order_id={{ order_id }}&user_token={{ user_token }}',
                type: 'post',
                data: $('#refund-amount'),
                dataType: 'json',
                cache: false,
                beforeSend: function() {
                    $('#button-refund').prop('disabled', true);
                    $('#button-refund').button('loading');
                },
                complete: function() {
                    $('#button-refund').prop('disabled', false);
                    $('#button-refund').button('reset');
                },
                success: function(json) {
                    if (json['success']) {
                        alert(json['success']);
                        location.reload();
                    } else if (json['error']) {
                        alert(json['error']);
                    }
                }
            });
        }
    }
});
//--></script>